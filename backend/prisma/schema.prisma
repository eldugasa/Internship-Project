datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")      // Pooled connection for app
  directUrl = env("DIRECT_URL")         // Direct connection for migrations
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  teamId Int?
  team   Team?  @relation(fields: [teamId], references: [id])
  tasks  Task[] @relation("TaskAssignee")
  comments Comment[] // ✅ Added relation to comments
  managedProjects Project[] @relation("ProjectManager")
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  status      String   @default("PLANNED")
  startDate   DateTime
  endDate     DateTime

  teamId Int
  team   Team @relation(fields: [teamId], references: [id])

  managerId Int
  manager   User   @relation(fields: [managerId], references: [id], name: "ProjectManager")
  tasks     Task[]
}

model Team {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  lead        String?
  createdAt   DateTime  @default(now())
  users       User[]
  projects    Project[]
}

// ✅ UPDATED Task model with missing fields
model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String   @default("PENDING") // PENDING, IN_PROGRESS, DONE, BLOCKED, REVIEW
  progress    Int      @default(0) // ✅ ADDED: 0-100 percentage
  dueDate     DateTime? // ✅ ADDED: Task due date
  priority    String   @default("MEDIUM") // ✅ ADDED: LOW, MEDIUM, HIGH, CRITICAL
  estimatedHours Float? // ✅ ADDED: Estimated time to complete
  actualHours    Float? // ✅ ADDED: Actual time spent

  // Task → Project relation
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int

  // Task → User relation
  assignee   User? @relation("TaskAssignee", fields: [assigneeId], references: [id])
  assigneeId Int?
  
  // ✅ ADDED: Task comments relation
  comments   Comment[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ✅ NEW: Comment model for task discussions
model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to task
  task   Task @relation(fields: [taskId], references: [id])
  taskId Int
  
  // Relation to user who commented
  user   User @relation(fields: [userId], references: [id])
  userId Int
}